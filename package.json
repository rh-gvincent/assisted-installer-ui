{
  "description": "Assisted Installer UI monorepo",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "i18next": "^20.4.0",
    "i18next-parser": "^3.3",
    "prettier": "2.8.4",
    "rimraf": "^4.3.1",
    "sw2dts": "^2.6.3",
    "typescript": "4.9.5"
  },
  "license": "Apache-2.0",
  "name": "openshift-assisted",
  "packageManager": "yarn@3.4.1",
  "private": true,
  "resolutions": {
    "@types/react": "<17.0.30",
    "@types/react-dom": "<17.0.30"
  },
  "scripts": {
    "build:all": "yarn workspaces foreach -v --topological-dev run build",
    "clean:all": "yarn workspaces foreach -v run clean",
    "update-api": "scripts/update-api.sh libs/ui-lib/lib/common/api/swagger.yaml libs/ui-lib/lib/common/api/types.ts",
    "i18n": "scripts/i18n.sh"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
