  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": [
    "apps/*/package.json",
    "apps/*/vite.config.ts",
    "libs/*/package.json",
    "libs/*/vite.config.ts",
  ]
}
